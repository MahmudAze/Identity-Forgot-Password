@model CreateProductVM

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Category Create</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputName1">Main image</label>
                    <input asp-for="MainImage" class="form-control">
                    <span class="text-danger" asp-validation-for="MainImage"></span>
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Additional Images</label>
                    <input asp-for="AdditionalImages" class="form-control" multiple>
                    <span class="text-danger" asp-validation-for="AdditionalImages"></span>
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Name</label>
                    <input asp-for="Name" type="text" class="form-control"  placeholder="Name">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Description</label>
                    <input asp-for="Description" type="text" class="form-control"  placeholder="Name">
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Price</label>
                    <input asp-for="Price" type="text" class="form-control"  placeholder="Name">
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Category</label>
                    <select class="form-control" asp-for="CategoryId" asp-items="@ViewBag.Categories"></select>
                    <span class="text-danger" asp-validation-for="CategoryId"></span>
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Tag</label>
                    <select class="form-control" asp-for="TagIds" asp-items="@ViewBag.Tags"></select>
                    <span class="text-danger" asp-validation-for="TagIds"></span>
                </div>

                <button class="btn btn-primary mr-2">Submit</button>
                <a class="btn btn-light" asp-action="Index">Back</a>
            </form>
        </div>
    </div>
</div>