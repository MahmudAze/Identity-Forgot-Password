@model LoginVM

<div class="container-fluid py-5 mt-5">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5 shadow p-4 rounded bg-light">
                <h3 class="mb-4 text-center text-primary">Sign In</h3>
                <hr />

                <form method="post">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                    <div class="form-group mb-3">
                        <label asp-for="UsernameOrEmail" class="form-label font-weight-bold"></label>
                        <input asp-for="UsernameOrEmail" class="form-control border-secondary" />
                        <span asp-validation-for="UsernameOrEmail" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Password" class="form-label font-weight-bold"></label>
                        <input asp-for="Password" type="password" class="form-control border-secondary" />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary rounded-pill py-2">Sing in</button>
                    </div>
                </form>

                <p class="text-center mt-3">
                    Don't have an account? <a asp-controller="Account" asp-action="Register" class="text-primary">Register here</a>
                </p>
            </div>
        </div>
    </div>
</div>