@model ResetPasswordVM

<div class="container-fluid py-5 mt-5">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5 shadow p-4 rounded bg-light">
                <h3 class="mb-4 text-center text-primary">Reset Password</h3>
                <hr />

                <form method="post">
                    <div class="text-danger" asp-validation-summary="All"></div>

                    <div class="form-group mb-3">
                        <label asp-for="NewPassword" class="form-label font-weight-bold">New Password</label>
                        <input asp-for="NewPassword" class="form-control border-secondary" placeholder="Enter Password" />
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="ConfirmPassword" class="form-label font-weight-bold">Confirm Password</label>
                        <input asp-for="ConfirmPassword" class="form-control border-secondary" placeholder="Enter Password" />
                    </div>

                    <input asp-for="UserId" hidden />
                    <input asp-for="Token" hidden />

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary rounded-pill py-2">Reset</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>